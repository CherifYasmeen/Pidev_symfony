<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>Resume</title>
    
{% block stylesheets %}
<style>
table {
    border-collapse: collapse;
    width: 100%;
  }
  
  td {
    padding: 10px;
    text-align: left;
  }
  
  tr:nth-child(even) {
    background-color: #f2f2f2;
  }
  
  tr:hover {
    background-color: #c9c9c9;
  }
  
  td:first-child {
    background-color: #4caf50;
    color: #fff;
    font-weight: bold;
  }
  
  td:last-child {
    background-color: #f44336;
    color: #fff;
    font-weight: bold;
  }
</style>
  {% endblock  %}
</head>


  {% block body %}

    <div style="margin: 0 auto;display: block;width: 500px;">
        <table width="100%" border="1">
            {% for livreur in livreurs %}
    
        
            <tr>
                <td>Name:</td>
                <td>{{livreur.nom}}</td>
            </tr>
            <tr>
                <td>Address:</td>
                <td>{{ livreur.prenom }}</td>
            </tr>
            <tr>
                <td>Mobile Number:</td>
                <td>{{ livreur.numtel }}</td>
            </tr>
            <tr>
                <td>Email:</td>
                <td>{{ livreur.email }}</td>
            </tr>
            <tr>
                <td>******</td>
                <td>******</td>
            </tr>
            {% endfor %}
       </table>
    </div>
    {% endblock  %}
</html>