{% extends 'back.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card-header h2 {
            color: blue;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 200px;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center">Welcome to your profile {{ app.user.prenom }} {{ app.user.nom }}</h2>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}
