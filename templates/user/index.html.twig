
{% extends 'back.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 200px">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <h1>Welcome to your profile </h1>
                    {% if app.user %}
                        <ul>
                            {% for role in app.user.roles %}
                                <li> Your Role is :   {{ role }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
                <a href="{{ path('client_profil_modifier') }}" class="btn btn-primary">Modifier le profil</a>
                <a href="{{ path('client_pass_modifier') }}" class="btn btn-primary">Modifier le mot de passe</a>
            </div>
        </div>
    </div>

{% endblock %}
