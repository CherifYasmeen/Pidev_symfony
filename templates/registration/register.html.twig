{% extends 'back.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
    margin-top: 200px;
}

.card {
    padding: 30px;
}

.alert-danger {
    margin-bottom: 20px;
}

h1 {
    margin-bottom: 30px;
}

.form-control {
    margin-bottom: 20px;
}

.form-check {
    margin-bottom: 20px;
}

.btn-primary {
    margin-top: 30px;
}
h1 {
  color: #1a237e; /* bleu foncé */
}

    </style>
{% endblock %}

{% block body %}
    <style>
        h1 {
            color: #1a237e;
        }
    </style>

    <div class="container" style="margin-top: 200px">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    <div align="center">
                        <h1 class="mb-4">Register</h1>
                    </div>


                    <div class="card-body">
                        {{ form_start(registrationForm, {'attr': {'class': 'form-signin'}}) }}

                        <div class="form-group">
                            {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom', 'autofocus': true}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prenom'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(registrationForm.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(registrationForm.numtel, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                        </div>


                        <div class="form-group">
                            <label>Type:</label>
                            <div class="form-check">
                                {{ form_widget(registrationForm.type[0], {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(registrationForm.type[0], 'Livreur', {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            <div class="form-check">
                                {{ form_widget(registrationForm.type[1], {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(registrationForm.type[1], 'Client', {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            <div class="form-check">
                                {{ form_widget(registrationForm.type[2], {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(registrationForm.type[2], 'Partenaire', {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                        </div>

                        <button type="submit" class="btn btn-lg btn-primary btn-block mt-4">Register</button>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

