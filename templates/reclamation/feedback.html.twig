<style>
    *{
        margin: 0;
    }
    .feedback__section{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .feedback__banner{
        width: 100%;
        min-height: 100px;
        max-height: 150px;
        background: #0d41e1;
    }
    .filters{
        margin-left: 50px;
        margin-top: 20px;
    }
    .feedback__container{
        max-width: 1080px;
        margin: auto;
        padding: 20px 135px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 50px;
    }
    .feedback__wrapper{
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: flex-start;
        width: 100%;
        gap: 20px;
    }
    .feedback__card__counter{
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 20px;
        font-weight: 700;
        min-width: 40px;
        min-height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50px;
        box-shadow: rgba(50, 50, 93, 0.25) 0px 30px 60px -12px inset, rgba(0, 0, 0, 0.3) 0px 18px 36px -18px inset;
    }
    .feedback__card{
        display: flex;
        flex-direction: row;
        width: 100%;
        gap: 25px;
        align-items: flex-start;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        padding: 20px 40px;
        font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }
    .user__information{
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 20px;
        max-width: 300px;
        width: 100%;
    }
    .user__media img{
        max-width: 100px;
    }
    .user__name{
        font-size: 18px;
        font-weight: 600;
    }
    .user__shipping__counter{
        font-size: 17px;
        font-weight: 500;
        color: grey;
    }
    .user__shipping__counter span{
        font-weight: 600;
    }
    .feedback{
        display: flex;
        flex-direction: column;
        gap: 15px;
    }
    .feedback__header{
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 20px;
    }
    .feedback__date{
        font-size: 16px;
        color: grey;
        font-weight: 500;
    }
    .feedback__text{
        max-width: 500px;
        font-size: 16px;
        line-height: 1.5;
    }
    @media only screen and (max-width: 1100px) {
        .feedback__container {
            padding: 20px 40px;
        }
        .feedback__wrapper{
            flex-direction: row;
            gap: 5px;
        }
        .feedback__card__counter{
            min-width: unset;
            min-height: unset;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 5px;
            box-shadow: none;
        }
        .user__information {
            flex-direction: column;
            width: unset;
        }
        .user__name{
            min-width: fit-content;
        }
        .user__shipping__counter{
            font-size: 14px;
        }
    }
    @media only screen and (max-width: 550px) {
        .user__information{
            display: none;
        }
        .feedback__header{
            flex-wrap: wrap;
        }
    }

</style>

