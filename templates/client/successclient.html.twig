{% extends 'client_back.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 200px;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center text-primary">Welcome to your profile {{ app.user.prenom }} {{ app.user.nom }}</h2>
                    </div>
                    <div class="card-body">
                        {% if app.user %}
                            <ul>
                                <li>Your role is: {{ app.user.type }}</li>
                            </ul>
                        {% endif %}    
                        <div class="row justify-content-center">
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
