{% extends 'back.html.twig' %}


{% block body %}
<div class="container" style="margin-top: 200px">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">{{ message }}</div>
                    {% endfor %}
                    <h1 class="card-title text-center mb-4 text-primary">editing the password of  {{ app.user.prenom }} {{ app.user.nom }}</h1>
                    <div class="card-group">
                        <form method="post" class="needs-validation" novalidate>
                            <div class="form-group">
                                <label for="pass">Please enter your new password</label>
                                <input type="password" id="pass" name="pass" class="form-control" required>
                                <div class="invalid-feedback">Veuillez entrer votre nouveau mot de passe.</div>
                            </div>
                            <div class="form-group">
                                <label for="pass2">Please confirm your new password</label>
                                <input type="password" id="pass2" name="pass2" class="form-control" required>
                                <div class="invalid-feedback">Veuillez confirmer votre nouveau mot de passe.</div>
                            </div>
                            <div class="text-center">
                                <button class="btn btn-primary btn-block mt-4">Valid</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
