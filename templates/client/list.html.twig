{% extends 'back.html.twig' %}

{% block body %}
    <section id="blog" class="card"  style="margin-top: 200px">
        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="card p-4">
                        <h1 class="mb-4">Les livreurs du partenaire {{ app.user.prenom }} {{ app.user.nom }}</h1>



                        <form action="{{ path('listlivreur') }}" method="GET" class="mb-4">
                            <div class="input-group">
                                <input type="text" class="form-control" name="prenom" placeholder="Chercher par prénom">
                                <button class="btn btn-outline-secondary" type="submit">Rechercher</button>
                            </div>
                        </form>


                        <form action="{{ path('listlivreur') }}" method="GET" class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="sortByNom" id="sortByNom" {% if sortByNom %}checked{% endif %}>
                                <label class="form-check-label" for="sortByNom">Trier par prénom</label>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Appliquer</button>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Prénom de livreur</th>
                                        <th scope="col">Nom de livreur</th>
                                        <th scope="col">Numéro de téléphone</th>
                                        <th scope="col">Email du livreur</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in livreur %}
                                        <tr>
                                            <td>{{ user.prenom }}</td>
                                            <td>{{ user.nom }}</td>
                                            <td>{{ user.numtel }}</td>
                                            <td>{{ user.email }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
