{% extends 'client_back.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block titre %}

<h1 class="d-flex justify-content-center">Mes colis </h1>


{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <table border=1 class="table table-striped">
        <tr>
            <th>RÃ©f</th>
            <th>Depart</th>
            <th>Destination</th>
            <th>Poids</th>
            <th>Prix</th>
            <th>Nom du livreur</th>
            <th>Prenom du livreur</th>
            <th>Email du livreur</th> 
        </tr>
        {% for coli in colis %}
        <tr>
            <td>{{ coli.ref }}</td>
            <td>{{ coli.depart }}</td>
            <td>{{ coli.destination }}</td>
            <td>{{ coli.poids }} Kg</td>
            <td>{{ coli.prix }} dt</td>
            {% set livreur = coli.getLivreur() %}
            {% if livreur %}
                <td>{{ livreur.nom }}</td>
                <td>{{ livreur.prenom }}</td>
                <td>{{ livreur.email }}</td>
            {% else %}
                <td>None</td>
                <td>None</td>
                <td>None</td>
            {% endif %}
        </tr>    
    {% else %}
        <tr>
            <td colspan="7">Tableau Vide!</td>
        </tr>
    {% endfor %}
    
        {{knp_pagination_render(colis)}}
    </table> 
</div>

{% endblock %}

