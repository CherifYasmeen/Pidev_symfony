{% block content %}
    <style>
        .btn-delete {
            background-color: red;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-delete:hover {
            background-color: darkred;
        }
    </style>

    <form method="post" action="{{ path('app_moyen_de_transport_delete', {'id': moyen_de_transport.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ moyen_de_transport.id) }}">
        <button class="btn-delete">Delete</button>
    </form>


{% endblock %}